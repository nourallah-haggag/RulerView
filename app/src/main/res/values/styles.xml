<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/circularstd_medium</item>
        <item name="android:buttonStyle">@style/AppTheme.DefaultButton</item>
    </style>

    <style name="AppTheme.DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/_50dp_dp</item>
        <item name="android:background">@drawable/bk_default_button</item>
        <item name="fontFamily">@font/circularstd_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_18sp_in</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/AppTheme.DefaultButton</item>
    </style>

    <style name="AppTheme.AlertDialog.NoTitle" parent="AppTheme.AlertDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/bk_rounded_corners_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowMinWidthMinor">80%</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="AppTheme">
        <item name="colorPrimary">@color/gc_red</item>
        <item name="android:textColorSecondary">@color/lightgray</item>
    </style>

    <style name="SplashThem" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="PtSessionDetailsHeaderText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18sp_in</item>
        <item name="fontFamily">@font/sfprodisplay_bold</item>
    </style>

    <style name="PtSessionDetailsBodyText">
        <item name="android:textColor">@color/txt_medium_gray</item>
        <item name="android:textSize">@dimen/_15sp_in</item>
        <item name="fontFamily">@font/sfprodisplay_regular</item>
    </style>

    <style name="UserProfileBodyText">
        <item name="android:textColor">@color/txt_dark_gray</item>
        <item name="android:textSize">@dimen/_15sp_in</item>
        <item name="fontFamily">@font/sfprodisplay_regular</item>
    </style>

</resources>