<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5dp_in">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/et_pin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25dp_in"
            android:layout_marginTop="@dimen/_10dp_in"
            android:layout_marginBottom="@dimen/_15dp_in"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:fontFamily="@font/circularstd_medium"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_helper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pinAnimationType="popIn"
            app:pinLineColors="@color/warm_grey"
            app:pinLineStroke="@dimen/_1sp_in" />

        <View
            android:id="@+id/view_helper"
            android:layout_width="@dimen/one"
            android:layout_height="@dimen/one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_25dp_in"
            android:drawableEnd="@drawable/ic_refresh"
            android:drawablePadding="@dimen/_5dp_in"
            android:fontFamily="@font/circularstd_book"
            android:paddingTop="@dimen/_10dp_in"
            android:paddingBottom="@dimen/_10dp_in"
            android:text="@string/resend"
            android:textColor="@color/cool_grey"
            android:textSize="@dimen/_13sp_in"
            app:layout_constraintBottom_toBottomOf="@id/et_pin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_pin" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
