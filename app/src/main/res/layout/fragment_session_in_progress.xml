<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20dp_in"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp_in"
            android:layout_marginTop="@dimen/_15dp_in"
            android:layout_marginEnd="@dimen/_40dp_in"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_34sp_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_close"
            tools:text="NourAllah Haggag" />

        <TextView
            android:id="@+id/tv_session_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp_in"
            android:fontFamily="@font/circularstd_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sp_in"
            app:layout_constraintStart_toStartOf="@id/tv_customer_name"
            app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
            tools:text="Consultation Session" />

        <TextView
            android:id="@+id/tv_session_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_46dp_in"
            android:layout_marginEnd="@dimen/_46dp_in"
            android:fontFamily="@font/circularstd_bold"
            android:gravity="center"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/_60sp_in"
            app:layout_constraintBottom_toTopOf="@id/btn_end_session"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_session_type"
            tools:text="45:00" />

        <TextView
            android:id="@+id/tv_report_a_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20dp_in"
            android:fontFamily="@font/circularstd_book"
            android:text="@string/report_a_problem"
            android:textColor="@color/gc_red"
            android:textSize="@dimen/_18sp_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_end_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp_in"
            android:layout_marginEnd="@dimen/_20dp_in"
            android:layout_marginBottom="@dimen/_20dp_in"
            android:text="@string/end_session"
            app:layout_constraintBottom_toTopOf="@id/tv_report_a_problem" />

        <ProgressBar
            android:id="@+id/pb_end_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_report_a_problem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_end_session"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
