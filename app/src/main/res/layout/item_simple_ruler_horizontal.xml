<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10dp_in"
    android:layout_marginEnd="@dimen/_10dp_in">

    <View
        android:id="@+id/view_start_dash"
        android:layout_width="@dimen/one_dp"
        android:layout_height="@dimen/_40dp_in"
        android:background="@color/cool_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_center_dash"
        android:layout_width="@dimen/one_dp"
        android:layout_height="@dimen/_70dp_in"
        android:layout_marginStart="@dimen/_20dp_in"
        android:background="@color/cool_grey"
        app:layout_constraintStart_toEndOf="@id/view_start_dash"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_end_dash"
        android:layout_width="@dimen/one_dp"
        android:layout_height="@dimen/_40dp_in"
        android:layout_marginStart="@dimen/_20dp_in"
        android:background="@color/cool_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_center_dash"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>