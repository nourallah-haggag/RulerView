<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_40dp_in">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20dp_in"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/view_image_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10dp_in"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                app:cardCornerRadius="@dimen/_5dp_in"
                app:layout_constraintDimensionRatio="W,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_back"
                app:layout_constraintWidth_percent="0.25">

                <ImageView
                    android:id="@+id/iv_session_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@drawable/ic_rumbl_logo" />
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5dp_in"
                app:layout_constraintBottom_toBottomOf="@id/tv_pt_name"
                app:layout_constraintEnd_toStartOf="@id/tv_pt_name"
                app:layout_constraintTop_toTopOf="@id/tv_pt_name"
                tools:src="@drawable/ic_male" />

            <TextView
                android:id="@+id/tv_pt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp_in"
                android:layout_marginTop="@dimen/_20dp_in"
                android:layout_marginEnd="@dimen/_20dp_in"
                android:fontFamily="@font/sfprodisplay_bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sp_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_image_container"
                app:layout_constraintWidth_percent="0.3"
                tools:text="Nour Haggag" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_pt_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp_in"
                android:checkable="true"
                android:checked="true"
                android:fontFamily="@font/circularstd_medium"
                android:textColor="@color/gc_red"
                android:textSize="@dimen/_13sp_in"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                app:checkedIcon="@drawable/ic_checkred"
                app:chipBackgroundColor="@color/gc_red_transparent"
                app:chipEndPadding="@dimen/_10dp_in"
                app:chipStartPadding="@dimen/_10dp_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pt_name"
                tools:text="lose weight" />


            <TextView
                android:id="@+id/tv_session_info"
                style="@style/PtSessionDetailsHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp_in"
                android:layout_marginTop="@dimen/_27dp_in"
                android:text="@string/session_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_height_label" />

            <TextView
                android:id="@+id/tv_session_type"
                style="@style/PtSessionDetailsBodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp_in"
                app:layout_constraintStart_toStartOf="@id/tv_session_info"
                app:layout_constraintTop_toBottomOf="@id/tv_session_info"
                tools:text="Consultation Session" />

            <TextView
                android:id="@+id/tv_no_of_sessions_label"
                style="@style/PtSessionDetailsBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp_in"
                android:layout_marginEnd="@dimen/_10dp_in"
                app:layout_constraintEnd_toStartOf="@id/tv_no_of_sessions_value"
                app:layout_constraintStart_toStartOf="@id/tv_session_type"
                app:layout_constraintTop_toBottomOf="@id/tv_session_type"
                tools:text="Number of coach Mohamedâ€™s sessions with you" />

            <TextView
                android:id="@+id/tv_no_of_sessions_value"
                style="@style/PtSessionDetailsHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20dp_in"
                app:layout_constraintBottom_toBottomOf="@id/tv_no_of_sessions_label"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="100" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/PtSessionDetailsHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_27dp_in"
                android:text="@string/location"
                app:layout_constraintStart_toStartOf="@id/tv_no_of_sessions_label"
                app:layout_constraintTop_toBottomOf="@id/tv_no_of_sessions_label" />

            <TextView
                android:id="@+id/tv_location_value"
                style="@style/PtSessionDetailsBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp_in"
                android:layout_marginEnd="@dimen/_20dp_in"
                app:layout_constraintEnd_toStartOf="@id/tv_navigate"
                app:layout_constraintStart_toStartOf="@id/tv_session_info"
                app:layout_constraintTop_toBottomOf="@id/tv_location"
                tools:text="Consultation Session" />

            <TextView
                android:id="@+id/tv_navigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20dp_in"
                android:drawableStart="@drawable/ic_navigate"
                android:drawablePadding="@dimen/_5dp_in"
                android:fontFamily="@font/sfprodisplay_medium"
                android:text="@string/navigate"
                android:textColor="@color/hype_blue"
                android:textSize="@dimen/_14sp_in"
                app:layout_constraintBottom_toBottomOf="@id/tv_location_value"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tv_date_time_title"
                style="@style/PtSessionDetailsHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_27dp_in"
                android:text="@string/date_and_time"
                app:layout_constraintStart_toStartOf="@id/tv_no_of_sessions_label"
                app:layout_constraintTop_toBottomOf="@id/tv_location_value" />

            <TextView
                android:id="@+id/tv_date_time_value"
                style="@style/PtSessionDetailsBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp_in"
                android:layout_marginEnd="@dimen/_20dp_in"
                app:layout_constraintEnd_toStartOf="@id/tv_time_value"
                app:layout_constraintStart_toStartOf="@id/tv_session_info"
                app:layout_constraintTop_toBottomOf="@id/tv_date_time_title"
                tools:text="Monday 10 nov 2010" />

            <TextView
                android:id="@+id/tv_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20dp_in"
                android:fontFamily="@font/sfprodisplay_bold"
                android:textColor="@color/gc_red"
                android:textSize="@dimen/_15sp_in"
                app:layout_constraintBottom_toBottomOf="@id/tv_date_time_value"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="02:00 PM" />

            <TextView
                android:id="@+id/tv_session_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp_in"
                android:fontFamily="@font/sfprodisplay_regular"
                android:textColor="@color/txt_medium_gray"
                android:textSize="@dimen/_11sp_in"
                app:layout_constraintEnd_toEndOf="@id/tv_time_value"
                app:layout_constraintTop_toBottomOf="@id/tv_time_value"
                tools:text="45 minutes" />

            <Button
                android:id="@+id/btn_positive_action_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp_in"
                android:layout_marginTop="@dimen/_70dp_in"
                android:layout_marginEnd="@dimen/_20dp_in"
                android:layout_marginBottom="@dimen/_40dp_in"
                android:text="@string/accept"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_session_duration"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tv_negative_action_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp_in"
                android:fontFamily="@font/circularstd_book"
                android:padding="@dimen/_10dp_in"
                android:text="@string/decline"
                android:textColor="@color/gc_red"
                android:textSize="@dimen/_18sp_in"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_positive_action_session" />

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/sfprodisplay_bold"
                android:text="@string/dash_empty_placeholder"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/tv_height_label"
                app:layout_constraintStart_toStartOf="@id/tv_height_label"
                app:layout_constraintTop_toBottomOf="@id/chip_pt_level"
                tools:text="180 cm" />

            <TextView
                android:id="@+id/tv_height_label"
                style="@style/UserProfileBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp_in"
                android:layout_marginTop="@dimen/_5dp_in"
                android:layout_marginEnd="@dimen/_10dp_in"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/current_height"
                app:layout_constraintEnd_toStartOf="@id/view_profile_divider_one"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_height" />

            <View
                android:id="@+id/view_profile_divider_one"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_10dp_in"
                android:background="@color/txt_dark_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_height_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_height" />

            <TextView
                android:id="@+id/tv_weight_label"
                style="@style/UserProfileBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp_in"
                android:layout_marginTop="@dimen/_5dp_in"
                android:layout_marginEnd="@dimen/_10dp_in"
                android:gravity="center"
                android:text="@string/current_weight"
                app:layout_constraintEnd_toStartOf="@id/view_profile_divider_two"
                app:layout_constraintStart_toEndOf="@id/view_profile_divider_one"
                app:layout_constraintTop_toBottomOf="@id/tv_height" />

            <View
                android:id="@+id/view_profile_divider_two"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_10dp_in"
                android:background="@color/txt_dark_gray"
                app:layout_constraintBottom_toBottomOf="@id/tv_height_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.65"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_height" />

            <TextView
                android:id="@+id/tv_bmi_label"
                style="@style/UserProfileBodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp_in"
                android:layout_marginTop="@dimen/_5dp_in"
                android:layout_marginEnd="@dimen/_20dp_in"
                android:gravity="center"
                android:text="@string/bmi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_profile_divider_two"
                app:layout_constraintTop_toBottomOf="@id/tv_height"
                app:layout_goneMarginEnd="@dimen/_20dp_in" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplay_bold"
                android:text="@string/dash_empty_placeholder"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/tv_weight_label"
                app:layout_constraintStart_toStartOf="@id/tv_weight_label"
                app:layout_constraintTop_toTopOf="@id/tv_height"
                tools:text="180 kg" />

            <TextView
                android:id="@+id/tv_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplay_bold"
                android:text="@string/dash_empty_placeholder"
                android:textColor="@color/black"
                android:textSize="@dimen/_17sp_in"
                app:layout_constraintEnd_toEndOf="@id/tv_bmi_label"
                app:layout_constraintStart_toStartOf="@id/tv_bmi_label"
                app:layout_constraintTop_toTopOf="@id/tv_height"
                tools:text="20" />

            <ProgressBar
                android:id="@+id/progress_accept_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_negative_action_session"
                app:layout_constraintEnd_toEndOf="@id/btn_positive_action_session"
                app:layout_constraintStart_toStartOf="@id/btn_positive_action_session"
                app:layout_constraintTop_toTopOf="@id/btn_positive_action_session" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
